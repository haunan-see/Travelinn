<%- include('../partials/header'); -%>

<h1><%= accommodation.name %></h1>

<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">
				Travelinn
			</p>
			<div class="list-group">
				<li class="list-group-item active">Info 1</li>
				<li class="list-group-item">Info 2</li>
				<li class="list-group-item">Info 3</li>
			</div>
			<div id="map"></div>
		</div>
		<div class="col-md-9">
			<div class="thumbnail">
				<img class="img-responsive" src="<%= accommodation.image %>">
				<div class="caption-full">
					<h4 class="float-right">
						MYR <%= accommodation.price %>/night
					</h4>
					<h4>
						<a><%= accommodation.name %></a>
					</h4>
					<p><%= accommodation.description %></p>
					<p>
						<em>Submitted by <%= accommodation.author.username %></em>
						<span class="float-right"><%= moment(accommodation.createdAt).fromNow() %></span>
					</p>
					<% if(currentUser && accommodation.author.id.equals(currentUser._id)){ %>
						<a class="btn btn-xs btn-warning" href="/accommodations/<%= accommodation._id %>/edit">Edit</a>
					<form class="delete-form" action="/accommodations/<%= accommodation._id %>?_method=DELETE" method="POST">
						<button class="btn btn-xs btn-danger">Delete</button>
					</form>
					<% } %>
				</div>
			</div>
			<div class="well">
				<div class="text-right">
					<a class="btn btn-info" href="/accommodations/<%= accommodation._id %>/comments/new">New Comment</a>
				</div>
				<hr>
				<% accommodation.comments.forEach(function(comment){ %>
				<div class="row">
					<div class="col-md-12">
						<strong><%= comment.author.username %></strong>
						<span class="float-right"><%= moment(accommodation.createdAt).fromNow() %></span>
						<p>
							<%= comment.text %>
						</p>
						<% if(currentUser && accommodation.author.id.equals(currentUser._id)){ %>
							<a class="btn btn-xs btn-info" href="/accommodations/<%= accommodation._id %>/comments/<%= comment._id %>/edit">edit</a>
							<form class="delete-form" action="/accommodations/<%= accommodation._id %>/comments/<%= comment._id %>?_method=DELETE" method="POST">
								<button class="btn btn-xs btn-danger">delete</button>
							</form>
						<% } %>
					</div>
				</div>
				<% }) %>
				<a href="/accommodations">Go Back</a>
			</div>
		</div>
	</div>
</div>

<script>
  function initMap() {
    var lat = <%= accommodation.lat %>;
    var lng = <%= accommodation.lng %>;
    var center = {lat: lat, lng: lng };
    var map = new google.maps.Map(document.getElementById("map"), {
        zoom: 8,
        center: center,
        scrollwheel: false
    });
    var contentString = `
      <strong><%= accommodation.name %><br />
      <%= accommodation.location %></strong>
      <p><%= accommodation.description %></p>
    `
    var infowindow = new google.maps.InfoWindow({
      content: contentString
    });
    var marker = new google.maps.Marker({
        position: center,
        map: map
    });
    marker.addListener("click", function() {
      infowindow.open(map, marker);
    });
  }
</script>
<script async defer src="https://maps.googleapis.com/maps/api/js?key=AIzaSyDlruGDXINk2aodw36mYDk2IOaYrhCUmZU&callback=initMap"></script>

<%- include('../partials/footer'); -%>
