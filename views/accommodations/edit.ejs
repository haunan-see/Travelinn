<%- include("../partials/header"); -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center">Edit <%= accommodation.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/accommodations/<%= accommodation._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="accommodation[name]" value="<%= accommodation.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="accommodation[image]" value="<%= accommodation.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="accommodation[description]" value="<%= accommodation.description %>" placeholder="Description">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" min="0.01" step="0.01" name="accommodation[price]" value="<%= accommodation.price %>" placeholder="Price per Night in MYR" required>
                </div>
				<div class="form-group">
    				<input class="form-control" type="text" name="location" id="location" value="<%= accommodation.location %>" placeholder="Location">
				</div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Update</button>
                </div>
            </form>
            <a href="/accommodations">Go Back</a>
        </div>
    </div>
</div>

<%- include("../partials/footer"); -%>