<%- include('../partials/header'); -%>


	<div id="main_content" class="container">
     <header class="jumbotron">
         <div class="container">
             <h1>Welcome To Travelinn!</h1>
             <p>View our hand-picked accommodations from all over the world</p>
             <p>
                <a class="btn btn-primary btn-large" href="/accommodations/new">Add New Accommodation</a>
             </p>
         </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
        <% accommodations.forEach(function(accommodation){ %>
            <div class="col-md-3 col-sm-6">
                <div class="thumbnail">
                   <img src="<%= accommodation.image %>">
                   <div class="caption">
                       <h4><%= accommodation.name %></h4>
                   </div>
					<p>
                       <a href="/accommodations/<%= accommodation._id %>" class="btn btn-primary">More Info</a>
                   </p>
                </div>
            </div>
        <% }); %>
    </div>
</div>

<%- include('../partials/footer'); -%>